{
  "name": "qurban-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "serve": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint": "npm run tslint \"src/**/*.ts\" --force",
    "test": "mocha --require ts-node/register src/**/*.spec.ts"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "~1.15.1",
    "compression": "^1.7.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "debug": "~2.2.0",
    "express": "~4.13.4",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "method-override": "^2.3.9",
    "mongojs": "^2.4.1",
    "mongoose": "^4.11.11",
    "morgan": "~1.7.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "swagger-jsdoc": "^1.9.7",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/method-override": "0.0.30",
    "@types/mocha": "^2.2.43",
    "@types/mongoose": "^4.7.21",
    "@types/node": "^8.0.28",
    "@types/swagger-jsdoc": "0.0.1",
    "chai": "^4.1.2",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "mocha": "^3.5.0",
    "mocha-typescript": "^1.1.8",
    "nodemon": "^1.12.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typemoq": "^2.0.1",
    "typescript": "^2.5.2"
  }
}
