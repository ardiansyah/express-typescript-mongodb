{
  "name": "social-travel-api-typescript",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all build watch",
    "serve": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build": "npm-run-all build-ts build-swagger tslint",
    "build-ts": "./node_modules/typescript/bin/tsc",
    "build-swagger": "node ./dist/tasks/swagger.js",
    "watch-ts": "./node_modules/typescript/bin/tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint": "npm run tslint \"src/**/*.ts\" --force",
    "test": "mocha --require ts-node/register src/**/*.spec.ts"
  },
  "dependencies": {
    "@types/passport-jwt": "^3.0.1",
    "app-root-path": "^2.1.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-ping": "^1.4.0",
    "express-winston": "^1.4.2",
    "glob": "^7.1.3",
    "http-status": "^1.2.0",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.10",
    "method-override": "^3.0.0",
    "mongojs": "^2.6.0",
    "mongoose": "^5.2.7",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "q": "^1.5.1",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "swagger-client": "^3.8.15",
    "swagger-jsdoc": "^3.0.2",
    "swagger-tools": "^0.10.4",
    "typedi": "^0.8.0",
    "typescript": "^3.0.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.4",
    "@types/node": "^10.5.7",
    "@types/swagger-jsdoc": "^0.0.2",
    "chai": "^4.1.2",
    "concurrently": "^3.6.1",
    "cpx": "^1.5.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.18.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typemoq": "^2.1.0"
  }
}
